<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:padding="@dimen/currency_item_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/currency_image_view"
            android:layout_width="@dimen/currency_image_dimen"
            android:layout_height="@dimen/currency_image_dimen"
            tools:src="@drawable/rounded_image"/>

    <LinearLayout
            android:layout_marginRight="@dimen/currency_name_margin_dimen"
            android:layout_marginLeft="@dimen/currency_name_margin_dimen"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/currency_prefix_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/currency_prefix_text_size"
                android:textColor="@color/currencyPrefixTextColor"
                tools:text="USD"/>

        <TextView
                android:id="@+id/currency_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/currency_name_text_size"
                android:textColor="@color/currencyNameTextColor"
                tools:text="US Dollar"/>

    </LinearLayout>

    <EditText
            android:id="@+id/currency_amount_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/currencyAmountTextColor"
            android:textSize="@dimen/currency_amount_text_size"
            android:inputType="numberDecimal"
            tools:text="220.22"/>


</LinearLayout>